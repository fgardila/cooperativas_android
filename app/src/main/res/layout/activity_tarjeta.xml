<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.TarjetaActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar" />

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvNomCoop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Nombre Cooperativa"
            android:textAppearance="?attr/textAppearanceHeadline5" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/tvNomCoop"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:background="#270949" />

        <TextView
            android:id="@+id/mainImgSubitulo"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_centerHorizontal="true"
            android:text="Acerque, deslize o inserta la tarjeta"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceHeadline6" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_pos_black"
            android:layout_below="@+id/mainImgSubitulo"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"/>

    </RelativeLayout>

</LinearLayout>