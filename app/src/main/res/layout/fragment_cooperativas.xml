<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.cooperativas.CooperativasFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/activityBackground"
        android:orientation="vertical"
        >

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:id="@+id/imgConnectCoop"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:src="@drawable/logo_linkcoop"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    />

                <TextView
                    android:id="@+id/tvNegocio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgConnectCoop"
                    android:layout_centerHorizontal="true"
                    android:text="Bienvenido"
                    android:textAppearance="?attr/textAppearanceHeadline5" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCooperativas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/tvNegocio"
                    android:layout_margin="@dimen/spacing_large"/>

            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>


    </LinearLayout>

</FrameLayout>